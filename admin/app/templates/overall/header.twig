<header class="main-header"><meta charset="gb18030">
    <!-- Logo -->
    <a href="./" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><i class="fas fa-dharmachakra" aria-hidden="true"></i></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg" style="font-weight:600;"><small><i class="fas fa-dharmachakra" aria-hidden="true"></i> ElTimónLibrería</small></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">

            <ul class="nav navbar-nav">

                <li>
                    <a href="./ventasEnLinea">
                        <i class="fas fa-check"></i>
                        <span class="label label-primary spanAprovadas"></span>
                    </a>
                </li>
                
                <li>
                    <a href="./ventasEnLinea">
                        <i class="fas fa-box-open"></i>
                        <span class="label label-info spanPreparadas"></span>
                    </a>
                </li>

                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="{{ owner_user.photo }}" class="user-image fotoUsuario" alt="User Image">
                        <span class="hidden-xs nombreUsuario">{{ owner_user.name }}</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="{{ owner_user.photo }}" class="img-circle fotoUsuario" alt="User Image">

                                <p>
                                    <span class="nombreUsuario">{{ owner_user.name }}</span>
                                    <small>
                                        {% for p in owner_user.perfiles %}
                                            {% if p.principal == 1 %}
                                                <span id="idPerfilConectado" idPerfil='{{p.id_perfil}}'>{{p.perfil}}</span>
                                            {% endif %}
                                        {% endfor %}
                                    </small>
                                </p>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="mi_cuenta" class="btn btn-sm btn-default btn-flat"><i class="fas fa-user-circle"></i> Ir a mi cuenta</a>
                            </div>
                            <div class="pull-right">
                                <a href="./logout" class="btn btn-sm btn-default btn-flat logOut"><i class="fa fa-power-off" aria-hidden="true"></i> Cerrar mi sesión</a>
                            </div>
                        </li>
                    </ul>
                </li>

                <!-- Control Sidebar Toggle Button -->
                <!-- <li>
                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                </li> -->

            </ul>
        </div>
    </nav>
</header>