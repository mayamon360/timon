{% extends 'overall/layout' %}

{% block appHeader %}
{# Bootstrap Color Picker #}
<link rel="stylesheet" href="assets/plantilla/AdminLTE/bower_components/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css">
{# Select2 #}
<link rel="stylesheet" href="assets/plantilla/AdminLTE/bower_components/select2/dist/css/select2.min.css">
{% endblock %}

{% block appBody %}

<!-- Site wrapper -->
<div class="wrapper">

	{% include 'overall/header' %}

  	{% include 'overall/sidebar' %}

  	<!-- Content Wrapper. Contains page content -->
  	<div class="content-wrapper">

  		<!-- Content Header (Page header) -->
    	<section class="content-header">

	      	<h1>
	        	{{datosModulo.texto}}
	        	<small>{{datosModulo.modulo}}</small>
	      	</h1>
	      	<ol class="breadcrumb">
	      		<li><a href="./"><i class="fas fa-tachometer-alt"></i> Panel de control</a></li>
	        	<li class="active"><i class="{{datosModulo.icono}}"></i> {{datosModulo.modulo}}</li>
	      	</ol>

	    </section>

	    <!-- Main content -->
	    <section class="content">

			<div class="row">
				
				<div class="col-md-6">

					{% include 'comercio/datosGenerales' %}

					{% include 'comercio/logotipo' %}
					
					{% include 'comercio/datosComerciales' %}

					{% include 'comercio/redesSociales' %}
					
				</div>

				<div class="col-md-6">

					{% include 'comercio/colores' %}

					{% include 'comercio/codigos' %}
					
				</div>

			</div>	    	

	    </section>
	    <!-- /.content -->

	</div>
  	<!-- /.content-wrapper -->

  	{% include 'overall/footer' %}

</div>
<!-- ./wrapper -->

{% endblock %}

{% block appFooter %}
{# Bootstrap Color Picker #}
<script src="assets/plantilla/AdminLTE/bower_components/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
{# InputMask #}
<script src="assets/plantilla/AdminLTE/plugins/input-mask/dist/jquery.inputmask.bundle.js"></script>
{# Select2  #}
<script src="assets/plantilla/AdminLTE/bower_components/select2/dist/js/select2.full.min.js"></script>

{% endblock %}

{% block scripts %}
<script src="assets/jscontrollers/comercio/comercio.js"></script>
<script>
	$("#telefonoComercio").inputmask({"mask": "(999) 999 9999"});
	$("#impuesto").inputmask("9{1,2}.99");
	$("#envioNacional, #envioInternacional, #tasaMinimaNac, #tasaMinimaInt").inputmask("9{1,3}.99");
	//Initialize Select2 Elements
    $('#seleccionarPais').select2();
</script>
{% endblock %}