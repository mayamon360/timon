{% extends 'overall/layout' %}
{% block appBody %}
<!-- Site wrapper -->
<div class="wrapper">

	{% include 'overall/header' %}

	{% include 'overall/sidebar' %} 

	<!-- Content Wrapper. Contains page content -->
  	<div class="content-wrapper">

  		<!-- Content Header (Page header) -->
    	<section class="content-header">

	      	<h1>
	        	Ajustes
	        	<small>Perfil {{owner_user.id_user}}</small>
	      	</h1>
	      	<ol class="breadcrumb">
	      		<li><a href="./"><i class="fas fa-tachometer-alt"></i> Panel de control</a></li>
	        	<li class="active"><i class="fa fa-address-card"></i> Perfiles</li>
	      	</ol>

	    </section>

	    <!-- Main content -->
	    <section class="content">
	
			<div class="row">
				<div class="col-xs-12 col-md-4 col-lg-3">
					<div class="box box-default">
			            <div class="box-body box-profile">
			              	<img class="profile-user-img img-responsive img-circle" src="assets/plantilla/{{datosPerfil.photo}}" alt="User profile picture">

			              	<h3 class="profile-username text-center">{{datosPerfil.name}}</h3>

			              	<p class="text-muted text-center">
			              		{{datosPerfil.perfil}}
			              	</p>

			              	<ul class="list-group list-group-unbordered">
			                	<li class="list-group-item">
									
									<small>
				                		<div class="row">
				                			<div class="col-xs-2 text-right">
				                				<i class="fas fa-envelope text-muted"></i>
				                			</div>
				                			<div class="col-xs-10">
				                				{{datosPerfil.email}}
				                			</div>
				                		</div>
			                		</small>
			                  		
			                	</li>
			                	<li class="list-group-item">
									
									<small>
				                		<div class="row">
				                			<div class="col-xs-2 text-right">
				                				{% if datosPerfil.status == 1 %}
													<i class="fas fa-toggle-on text-muted"></i>
						                  		{% else %}
				                					<i class="fas fa-toggle-off text-muted"></i>
						                  		{% endif %}
				                			</div>
				                			<div class="col-xs-10">
						                  		{% if datosPerfil.status == 1 %}
													<span class="label label-info">Activado</span>
						                  		{% else %}
						                  			<span class="label label-default">Desactivado</span>
						                  		{% endif %}
				                			</div>
				                		</div>
			                		</small>

			                	</li>
			                	<li class="list-group-item">
									
									<small>
				                		<div class="row">
				                			<div class="col-xs-2 text-right">
				                				<i class="fa fa-fw fa-user-plus text-muted"></i>
				                			</div>
				                			<div class="col-xs-10">
				                		 		{{ amigable_time(datosPerfil.register_date|date('U')) }}
				                			</div>
				                		</div>
			                		</small>

			                	</li>

			                	<li class="list-group-item">
									
									<small>
				                		<div class="row">
				                			<div class="col-xs-2 text-right">
				                				<i class="fas fa-user-edit text-muted"></i>
				                			</div>
				                			<div class="col-xs-10">
				                		 		{{ amigable_time(datosPerfil.date|date('U')) }}
				                			</div>
				                		</div>
			                		</small>

			                	</li>

			                	<li class="list-group-item">
			                		
			                		<small>
			                			<div class="row">
			                				<div class="col-xs-2 text-right">
			                					<i class="far fa-clock text-muted"></i>
			                				</div>
			                				<div class="col-xs-10">
			                					{% if datosPerfil.session_date|date('U') < 0 %}
			                						Aún no hay conexión
			                					{% else %}
			                						{{ amigable_time(datosPerfil.session_date|date('U')) }}
			                					{% endif %}
			                				</div>
			                			</div>
			                		</small>

			                	</li>
			              	</ul>

			            </div>
			            <!-- /.box-body -->
			        </div>
				</div>
				<div class="col-xs-12 col-md-8 col-lg-9">
					
				</div>
			</div>

	    </section>
	    <!-- /.content -->

	</div>
  	<!-- /.content-wrapper -->

  	{% include 'overall/footer' %}

</div>
<!-- ./wrapper -->

{% endblock %}