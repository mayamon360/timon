{% extends 'overall/layout' %}
{% block titleSeccion %}
    <title>Entradas</title>
{% endblock %}
{% block appHeader %}
<!-- DataTables -->
<!-- <link rel="stylesheet" href="assets/plantilla/AdminLTE/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css"> -->
<link rel="stylesheet" type="text/css" href="assets/plantilla/AdminLTE/bower_components/datatables/DataTables-1.10.18/css/dataTables.bootstrap.css"/>
<link rel="stylesheet" type="text/css" href="assets/plantilla/AdminLTE/bower_components/datatables/Responsive-2.2.2/css/responsive.bootstrap.css"/>

<!-- http://www.daterangepicker.com/ -->
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
{% endblock %}
{% block appBody %}

<!-- Site wrapper -->
<div class="wrapper">

	{% include 'overall/header' %}

  	{% include 'overall/sidebar' %}

  	<!-- Content Wrapper. Contains page content -->
  	<div class="content-wrapper">

	    <!-- Main content -->
	    <section class="content">

            <div class="box box-widget">
                
                <div class="box-header with-border"> 
                    <div class="row">
                        <div class="col-xs-4">
                            <button type="button" class="btn btn-sm btn-default btn-flat" id="daterange-btn">
    	                        <span>
    	                            <i class="fa fa-calendar"></i> TODAS
    	                        </span>
    	                        <i class="fa fa-caret-down"></i>
    	                    </button>
	                        <i class="fas fa-times btn btn-xs hidden clearDateRange"></i>
	                    </div>
    	                <div class="col-xs-8 text-right">
    	                    <a href="caja" class="btn btn-sm btn-default btn-flat font-weight-bold text-uppercase">CAJA</a>
    	                    <a href="productos" class="btn btn-sm btn-default btn-flat font-weight-bold text-uppercase">PRODUCTOS</a>
    	                    <a href="registrarCompras" class="btn btn-sm bg-purple btn-flat font-weight-bold text-uppercase"><i class="fas fa-barcode"></i> ENTRADA</a>
    	                </div>
    	            </div>
                </div>
            
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-condensed table-striped table-hover table-bordered" style="width:100%" id="compras">
                            <thead class="text-uppercase bg-navy">
                                <tr>
                                    <th>fecha(columna para poder ordenar)</th>
                                    <th style="width:100px;">Tipo</th>
                                    <th style="width:120px;">Folio entrada</th>
                                    <th style="width:90px;">Referencia</th>
                                    <th style="width:70px;">Importe</th>
                                    <th style="width:300px;">Fecha</th>
                                    <th width="110px">Opciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="4" style="text-align:right">TOTAL:</th>
                                    <th style="text-align:right"></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div id="modalVerCompraEntrada" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                            </button>
                              <h4 class="modal-title"><i class="fas fa-folder"></i> Folio de <span id="tipoMovimiento"></span>: <span id="folio"></span></h4>
                        </div>
                        <div class="modal-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped table-condensed table-hover" style="margin-bottom:0;">
                                    <thead class="bg-navy text-uppercase">
                                        <tr>
                                            <th class="text-center" style="width:50px;">Cantidad</th>
                                            <th>Producto</th>
                                            <th class="text-right" style="width:80px;"><span class="badge bg-grey">P. compra</span></th>
                                            <th class="text-right" style="width:80px;"><span class="badge bg-blue">P. venta</span></th>
                                            <th class="text-right" style="width:150px;">Importe P. Compra</th>
                                            <th class="text-right" style="width:150px;">Importe P. Venta</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>  
                            </div>      
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
	    	

	    </section>
	    <!-- /.content -->

	</div>
  	<!-- /.content-wrapper -->

  	{% include 'overall/footer' %}

</div>
<!-- ./wrapper -->

{% endblock %}

{% block appFooter %}
